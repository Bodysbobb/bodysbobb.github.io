<div class="list-groups">
  {% for content in data[1] %}
    <div class="list-group col-md-12">
      <table class="table-cv list-group-table">
        <tbody>
          <tr>
            <!-- Skill Icon -->
            {% if content.icon %}
              <td class="list-group-category-icon">
                <i class="{{ content.icon }}"></i>
              </td>
            {% else %}
              <td class="list-group-category-icon"></td>
            {% endif %}

            <!-- Skill Name -->
            <td class="list-group-category">
              <b>{{ content.name }}</b>
            </td>
          </tr>

          <!-- Grouped Skills by Level in a Single Line -->
          <tr>
            <td></td>
            <td class="list-group-keywords">
              {% for level_group in content.levels %}
                <span class="skill-level">• <i>{{ level_group.level }}</i></span>
                <span class="skill-keywords">
                  {{ level_group.keywords | join: " • " }}
                </span>
                {% unless forloop.last %}<br>{% endunless %}
              {% endfor %}
            </td>
          </tr>

          <!-- Ensure Description is Displayed at the Bottom of Each Skill Category -->
          {% if content.description and content.description != "" %}
          <tr>
            <td></td>
            <td class="skill-description">
              <small><i>{{ content.description | strip }}</i></small>
            </td>
          </tr>
          {% endif %}

        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
